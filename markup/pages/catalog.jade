extends main

include ../components/item/item

block head
    - var headData = {title: title}
    - var breadcrumb = true
    link(rel="stylesheet", href="%=static=%css/separate-css/nouislider.css")
    link(href="%=static=%css/separate-css/slick.css", rel="stylesheet", type="text/css")

block content
    .container
        ul.breadcrumb.not-styleLink.hidden-lg-up
            li: a(href="#"): span Главная
            li: a(href="#"): span Каталог
            li: span Платья
        .lk
            .lk__left
                .lk__left-content.lk__padding
                    p.lk__left-title.hidden-md-down Каталог товаров:

                    button.hidden-lg-up.btn.btn-red.ttu.btn-width.catalog-toggle-btn Каталог товаров

                    .catalog-toggle-content
                        br
                        a(href="#").lk__btn-red.not-styleLink Коллекция
                        a(href="#").lk__btn-suggestions.not-styleLink
                                span(style="width: 38px;"): span.lk__btn-suggestions-icon.ttu NEW
                                span: span.lk__btn-suggestions-title Весна - лето 2017

                        ul.lk__nav.not-styleLink
                            li: a(href="#"): b Бренды
                            li.active.parent
                                a(href="#")
                                    b Одежда
                                    em.lk__nav-after
                                .lk__nav-toggle.active
                                    ul.lk__nav-subMenu
                                        li: a(href="#").lk__nav-link.active
                                            span.lk__nav-icon: +icon('dresses')
                                            span: span.lk__nav-link-title Платья
                                        li: a(href="#").lk__nav-link
                                            span.lk__nav-icon: +icon('t-shirt')
                                            span: span.lk__nav-link-title Футболки
                                        li: a(href="#").lk__nav-link
                                            span.lk__nav-icon: +icon('tops')
                                            span: span.lk__nav-link-title Топы
                                        li: a(href="#").lk__nav-link
                                            span.lk__nav-icon: +icon('skirts')
                                            span: span.lk__nav-link-title Юбки
                                        li: a(href="#").lk__nav-link
                                            span.lk__nav-icon: +icon('pants')
                                            span: span.lk__nav-link-title Брюки
                                        li: a(href="#").lk__nav-link
                                            span.lk__nav-icon: +icon('dresses')
                                            span: span.lk__nav-link-title Джинсы
                                        li: a(href="#").lk__nav-link
                                            span.lk__nav-icon: +icon('t-shirt')
                                            span: span.lk__nav-link-title Шорты
                                        li: a(href="#").lk__nav-link
                                            span.lk__nav-icon: +icon('tops')
                                            span: span.lk__nav-link-title Блузы
                                        li: a(href="#").lk__nav-link
                                            span.lk__nav-icon: +icon('skirts')
                                            span: span.lk__nav-link-title Джемперы
                                        li: a(href="#").lk__nav-link
                                            span.lk__nav-icon: +icon('pants')
                                            span: span.lk__nav-link-title Жакеты
                                        li: a(href="#").lk__nav-link
                                            span.lk__nav-icon: +icon('dresses')
                                            span: span.lk__nav-link-title Кардиганы
                                        li: a(href="#").lk__nav-link
                                            span.lk__nav-icon: +icon('t-shirt')
                                            span: span.lk__nav-link-title Верхняя одежда
                                        li: a(href="#").lk__nav-link
                                            span.lk__nav-icon: +icon('tops')
                                            span: span.lk__nav-link-title Свитшоты и бомберы

                            li.parent
                                a(href="#")
                                    b Обувь
                                    em.lk__nav-after
                                .lk__nav-toggle
                                    ul.lk__nav-subMenu
                                        li: a(href="#").lk__nav-link.active
                                            span.lk__nav-icon: +icon('dresses')
                                            span: span.lk__nav-link-title Платья
                                        li: a(href="#").lk__nav-link
                                            span.lk__nav-icon: +icon('t-shirt')
                                            span: span.lk__nav-link-title Футболки
                                        li: a(href="#").lk__nav-link
                                            span.lk__nav-icon: +icon('tops')
                                            span: span.lk__nav-link-title Топы
