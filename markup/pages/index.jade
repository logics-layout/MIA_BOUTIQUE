                    button.form-search__btn: +icon('search', 'svg-search', 15, 15)
        br
        br
        br
    .clothing.not-styleLink
        a(href="#").clothing__section
            .clothing__item
                .clothing__item-cell
                    .clothing__item-img: +img('content/clothing/1', 'png')
