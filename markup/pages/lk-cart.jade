extends lk-main


block head
    - var title = "Корзина"
    - var breadcrumb = true

block content-lk
    .cart.cart_page.cart_page_lk
        .cart__item.cart__item_head
            span Фото
            span Название / артикул
            span.cart__itemCenter Цена
            span.cart__itemCenter Количество
            span.cart__itemCenter Скидка
            span.cart__itemCenter Стоимость

        - for(var i = 0; i<3; i++)
            .cart__item
                .cart__item-img: +img('content/order/4')
                .cart__item-title
                    .cart__item-title-table
                        .cart__item-title-table-cell
                            span.db: b Платье с клёпками
                            span.cart__item-title-m DVR2100
                        .cart__item-title-table-cell
                            button.cart__item-clear.hidden-lg-up: +icon('clear')
                            span.cart__item-title-m &nbsp;

                .cart__item-price.cart__itemCenter.cart__item-mobileDesc
                    span.cart__item-titleMin.hidden-lg-up Сумма
                    span: b 6 800р.
                    span.hidden-md-down &nbsp;
                .cart__item-count.cart__itemCenter.cart__item-mobileDesc
                    span.cart__item-titleMin.hidden-lg-up Кол-во
                    span
                        span.count
                            button.count__btn.count__btn_minus: +icon('arrow-prev')
                            input.count__input(value="1")
                            button.count__btn.count__btn_plus.active: +icon('arrow-next')
                    span.hidden-md-down &nbsp;
                .cart__item-descount.cart__itemCenter.cart__item-mobileDesc
                    span.cart__item-titleMin.hidden-lg-up Скидка
                    span: b 10%
                    span.hidden-md-down &nbsp;
                .cart__item-price.cart__itemCenter.cart__item-mobileDesc
                    span.cart__item-titleMin.hidden-lg-up Итого
                    span: b.color-black 12 420р. #[button.cart__item-clear.hidden-md-down: +icon('clear')]
                    span.hidden-md-down &nbsp;
    br
    p.cart-itogPrice.text-right Итого: #[b.cart-itogPrice__textBig.cart-itogPrice__textBig_margin 230.00 р.]
    br.hidden-md-up
    p.h1.h1_small Оформление заказа
    br
    .step-title
        span.step-title__num 1
        span.step-title__title Информация о покупателе
        span.step-title__text.color-red #[span.step-title__text-big *], поля обязательны для заполнения

    .row
        .col-lg-4
            .form-group
                label Ф.И.О. #[span.required *]
                input(placeholder="").form-control
        .col-lg-4
            .form-group
                label Телефон #[span.required *]
                input(placeholder="").form-control
        .col-lg-4
            .form-group
                label Эл. почта #[span.required *]
                input(placeholder="").form-control
    br
    .step-title
        span.step-title__num 2
        span.step-title__title Доставка
    .row
        .col-lg-4
            .form-group
                label Край, область #[span.required *]
                input(placeholder="").form-control
        .col-lg-4
            .form-group
                label Индекс #[span.required *]
                input(placeholder="").form-control
        .col-lg-4
            .form-group
                label Город #[span.required *]
                input(placeholder="").form-control
        .col-lg-8
            .form-group
                label Улица, дом, корпус, квартира #[span.required *]
                textarea(rows="4").form-control
    br
    .step-title
        span.step-title__num 2
        span.step-title__title Оплата

    .row
        .col-lg-4
            .form-group
                label Выберите способ оплаты #[span.required *]
                input(placeholder="").form-control
        .col-lg-4
            .form-group
                label Введите номер вашей скидочной карты
                input(placeholder="").form-control
        .col-lg-4
            .form-group
                label Промо-код
                input(placeholder="").form-control
        .col-lg-8
            .form-group
                label Комментарий к заказу
                textarea(rows="4").form-control
        .col-lg-4
            br
            p.cart-itogPrice.cart-itogPrice_margin Итого к оплате: #[b.cart-itogPrice__textBig 2 230.00 р.]
            button.btn.btn-red.btn-order.ttu Оформить заказ


